# Copy to .env and adjust values for your environment.
# Environment overrides use PME__ prefix and __ for nesting.

PME__APP__CATEGORIES=finance,geopolitics
PME__APP__REFRESH_INTERVAL_SEC=60

PME__LOGGING__LEVEL=INFO

PME__FILTERS__TOP_K_PER_CATEGORY=10
PME__FILTERS__HOT_SORT=liquidity,volume_24h
PME__FILTERS__MIN_LIQUIDITY=0

PME__SIGNALS__BIG_TRADE_USD=10000
PME__SIGNALS__BIG_VOLUME_1M_USD=25000
PME__SIGNALS__COOLDOWN_SEC=120
PME__SIGNALS__MAJOR_CHANGE_PCT=5
PME__SIGNALS__MAJOR_CHANGE_WINDOW_SEC=60
PME__SIGNALS__MAJOR_CHANGE_MIN_NOTIONAL=0
PME__SIGNALS__MAJOR_CHANGE_SOURCE=trade

PME__GAMMA__BASE_URL=https://gamma-api.polymarket.com
PME__GAMMA__USE_EVENTS_ENDPOINT=true
PME__GAMMA__REQUEST_INTERVAL_MS=0
PME__GAMMA__TAGS_CACHE_SEC=600
PME__GAMMA__RETRY_MAX_ATTEMPTS=5
PME__CLOB__WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market
PME__CLOB__CUSTOM_FEATURE_ENABLED=true
PME__CLOB__INITIAL_DUMP=true
PME__CLOB__PING_INTERVAL_SEC=10
PME__CLOB__RESYNC_ON_GAP=true
PME__CLOB__RESYNC_MIN_INTERVAL_SEC=30

PME__SINKS__REDIS__URL=redis://localhost:6379/0
PME__SINKS__REDIS__CHANNEL=polymarket.events
